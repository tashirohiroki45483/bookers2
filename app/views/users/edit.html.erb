<!--users_edit-->
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <h1>User info</h1>
      
      <% if @user.errors.any?%>
      <%= @user.errors.count%>errors prohibited this obj from being saved:
      <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
      <p class="mb-1">Name</p>
      <%= f.text_field :name, :size=>"50" %>
      <p for="inputImage">Image</p>
      <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>  
      <p class="mt-3 mb-1">Introduction</p>
      <%= f.text_area :introduction, :size=>"49.5x2"%>
      <div>
      <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>
      <% end %>
      
    </div>
  </div>
</div>