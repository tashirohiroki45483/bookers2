<h2>User info</h2>
  <% if user.image.attached? %>
    <%= image_tag user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>
<table class="table">
        <thead class="">
          <tr>
            <th scope="col">name</th>
            <th scope="col"><%= user.name %></th>
          </tr>
        </thead>
      <tbody>
          <tr>
            <th scope="row">introduction</th>
            <th><%= user.introduction %></th>
          </tr>
      </tbody>
</table>

<a class="" href="/">
<button type="button" class="btn btn-outline-dark btn-block">
  <i class="fas fa-user-cog"></i>
</button>
</a>

<h2>New book</h2>

<%= form_with model: book do |f| %>
  <p>Title</p>
  <%= f.text_field :title, :size=>"25" %>

  <p>Opinion</p>
  <%= f.text_area :body, :size=>"25x3" %>
  
  <button type="button" class="btn btn-success"> <%= f.submit'Create Book' %></button>
  
<% end %>